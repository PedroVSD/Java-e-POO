package slide_P3;
import java.util.Scanner;

class Pessoa{
	//vari√°veis de classe
	String nome;
	int idade;
	float altura;
	char sexo;
}

public class Var {
		
	public static void main(String[] Args) {
		Scanner entrada = new Scanner(System.in);
		
		Pessoa p1 = new Pessoa();
		
		System.out.println("Qual o seu nome?");
		p1.nome = entrada.next();
		
		System.out.println(p1.nome);
		
		entrada.close();
	}
}
