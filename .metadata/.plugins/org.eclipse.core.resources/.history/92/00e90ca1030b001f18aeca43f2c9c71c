package relacionamentoEntreClasses;

import java.util.ArrayList;

public class Main {

	public static void main(String[] args) {
		//Lustador listaLutadores[] = new Lutador[5];
		//listaLutadores[0] = new Lutador("Pretty boy", "França", 31, 1.75f, 68.9f, 11, 3, 1) ;
		
		ArrayList<Lutador> listaLutadores = new ArrayList<>();
		
		listaLutadores.add(new Lutador("Pretty boy", "França", 31, 1.75f, 68.9f, 11, 3, 1));
		listaLutadores.add(new Lutador("Putscript", "Brasil", 29, 1.68f, 57.8f, 14, 2, 3));
		
		Lutador lutador = listaLutadores.get(0);
		
		System.out.println("Status do lutador na posição 1:");
	    System.out.println("Nome: " + lutador.getNome());
	    System.out.println("Nacionalidade: " + lutador.getNacionalidade());
	    System.out.println("Idade: " + lutador.getIdade());
	    System.out.println("Altura: " + lutador.getAltura());
	    System.out.println("Peso: " + lutador.getPeso());
	    System.out.println("Categoria: " + lutador.getCategoria());
	    System.out.println("Vitórias: " + lutador.getVitorias());
	    System.out.println("Derrotas: " + lutador.getDerrotas());
	    System.out.println("Empates: " + lutador.getEmpates());
		
	}

}
