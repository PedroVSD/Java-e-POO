package p1Jogo;

public class Fase {
	private final String nome;
	private int dificuldade;
	private int numeroPersonagens;
	
	public Fase(String nomeDaFase) {
		this.nome = nomeDaFase;
	}
	
	public void setDificuldade(int dificuldade) {
		this.dificuldade = dificuldade + getNumeroPersonagens() + 1;
	}
	
	public int getDificuldade() {
		return this.dificuldade;
	}
	
	public int getNumeroPersonagens() {
		return numeroPersonagens;
	}

	public void setNumeroPersonagens(int numeroPersonagens) {
		this.numeroPersonagens = numeroPersonagens;
	}
}
