		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public int calculaMana() {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public int calculaPoder() {
		int poder;
		poder = getVidaOponente()-1;
		return poder;
	}

}
